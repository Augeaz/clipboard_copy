{
  "name": "clipboard-copy",
  "displayName": "ClipboardCopy",
  "description": "Copy file and folder contents to clipboard via Explorer context menu with intelligent .gitignore filtering, smart multi-selection, and mixed item support",
  "version": "0.0.11",
  "icon": "images/icon.png",
  "galleryBanner": {
    "color": "#1e1e1e",
    "theme": "dark"
  },
  "extensionKind": [
    "workspace"
  ],
  "engines": {
    "vscode": "^1.93.0"
  },
  "categories": [
    "Other"
  ],
  "publisher": "AugeazLabs",
  "repository": {
    "type": "git",
    "url": "https://github.com/Augeaz/clipboard_copy.git"
  },
  "main": "./out/extension.js",
  "contributes": {
    "commands": [
      {
        "command": "clipboard-copy.copyFileToClipboard",
        "title": "Copy File to Clipboard"
      },
      {
        "command": "clipboard-copy.copyFolderToClipboard",
        "title": "Copy Folder to Clipboard"
      },
      {
        "command": "clipboard-copy.copyContentToClipboard",
        "title": "Copy Content to Clipboard"
      }
    ],
    "menus": {
      "explorer/context": [
        {
          "command": "clipboard-copy.copyFileToClipboard",
          "when": "(resourceScheme == file || resourceScheme == vscode-remote) && !explorerResourceIsFolder && !listMultiSelection",
          "group": "5_cutcopypaste@10"
        },
        {
          "command": "clipboard-copy.copyFolderToClipboard",
          "when": "(resourceScheme == file || resourceScheme == vscode-remote) && explorerResourceIsFolder && !listMultiSelection",
          "group": "5_cutcopypaste@10"
        },
        {
          "command": "clipboard-copy.copyContentToClipboard",
          "when": "(resourceScheme == file || resourceScheme == vscode-remote) && listMultiSelection",
          "group": "5_cutcopypaste@10"
        }
      ]
    },
    "configuration": {
      "title": "ClipboardCopy",
      "properties": {
        "clipboard-copy.allowedFilePatterns": {
          "type": "string",
          "default": "*.py,*.js,*.ts",
          "description": "Comma-separated file patterns to include when copying folders (e.g., *.py,*.js,*.ts)"
        },
        "clipboard-copy.respectGitignore": {
          "type": "boolean",
          "default": true,
          "description": "Respect .gitignore files when copying folders"
        },
        "clipboard-copy.respectVSCodeExcludes": {
          "type": "boolean",
          "default": true,
          "description": "Respect VS Code's files.exclude and search.exclude settings"
        },
        "clipboard-copy.customExcludePatterns": {
          "type": "string",
          "default": "",
          "description": "Additional exclude patterns (comma-separated, e.g., node_modules,dist,.git)"
        }
      }
    }
  },
  "scripts": {
    "vscode:prepublish": "npm run package",
    "compile": "tsc -p ./",
    "watch": "tsc -watch -p ./",
    "package": "node esbuild.js --production",
    "build": "node esbuild.js",
    "watch-esbuild": "node esbuild.js --watch"
  },
  "devDependencies": {
    "@types/node": "^18.x",
    "@types/vscode": "^1.93.0",
    "esbuild": "^0.25.10",
    "typescript": "^5.9.3"
  },
  "dependencies": {
    "ignore": "^7.0.5"
  }
}
