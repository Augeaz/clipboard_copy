{
  "name": "clipboard-copy",
  "displayName": "ClipboardCopy",
  "description": "Copy file and folder contents to clipboard via Explorer context menu",
  "version": "0.0.1",
  "engines": {
    "vscode": "^1.80.0"
  },
  "categories": ["Other"],
  "activationEvents": [
    "onStartupFinished"
  ],
  "main": "./out/extension.js",
  "contributes": {
    "commands": [
      {
        "command": "clipboard-copy.copyFileToClipboard",
        "title": "Copy File to Clipboard"
      },
      {
        "command": "clipboard-copy.copyFolderToClipboard",
        "title": "Copy Folder to Clipboard"
      }
    ],
    "menus": {
      "explorer/context": [
        {
          "command": "clipboard-copy.copyFileToClipboard",
          "when": "resourceScheme == file && !explorerResourceIsFolder",
          "group": "5_cutcopypaste@10"
        },
        {
          "command": "clipboard-copy.copyFolderToClipboard",
          "when": "resourceScheme == file && explorerResourceIsFolder",
          "group": "5_cutcopypaste@10"
        }
      ]
    },
    "configuration": {
      "title": "ClipboardCopy",
      "properties": {
        "clipboard-copy.allowedFilePatterns": {
          "type": "string",
          "default": "*.py,*.js,*.ts",
          "description": "Comma-separated file patterns to include when copying folders (e.g., *.py,*.js,*.ts)"
        }
      }
    }
  },
  "scripts": {
    "vscode:prepublish": "npm run compile",
    "compile": "tsc -p ./",
    "watch": "tsc -watch -p ./"
  },
  "devDependencies": {
    "@types/vscode": "^1.80.0",
    "@types/node": "^16.x",
    "typescript": "^5.1.6"
  }
}