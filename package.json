{
  "name": "clipboard-copy",
  "displayName": "ClipboardCopy",
  "description": "Copy file and folder contents to clipboard via Explorer context menu",
  "version": "0.0.4",
  "icon": "images/icon.png",
  "galleryBanner": {
    "color": "#1e1e1e",
    "theme": "dark"
  },
  "extensionKind": [
    "workspace"
  ],
  "engines": {
    "vscode": "^1.93.0"
  },
  "categories": [
    "Other"
  ],
  "publisher": "AugeazLabs",
  "repository": {
    "type": "git",
    "url": "https://github.com/Augeaz/clipboard_copy.git"
  },
  "main": "./out/extension.js",
  "contributes": {
    "commands": [
      {
        "command": "clipboard-copy.copyFileToClipboard",
        "title": "Copy File to Clipboard"
      },
      {
        "command": "clipboard-copy.copyFolderToClipboard",
        "title": "Copy Folder to Clipboard"
      }
    ],
    "menus": {
      "explorer/context": [
        {
          "command": "clipboard-copy.copyFileToClipboard",
          "when": "(resourceScheme == file || resourceScheme == vscode-remote) && !explorerResourceIsFolder",
          "group": "5_cutcopypaste@10"
        },
        {
          "command": "clipboard-copy.copyFolderToClipboard",
          "when": "(resourceScheme == file || resourceScheme == vscode-remote) && explorerResourceIsFolder",
          "group": "5_cutcopypaste@10"
        }
      ]
    },
    "configuration": {
      "title": "ClipboardCopy",
      "properties": {
        "clipboard-copy.allowedFilePatterns": {
          "type": "string",
          "default": "*.py,*.js,*.ts",
          "description": "Comma-separated file patterns to include when copying folders (e.g., *.py,*.js,*.ts)"
        }
      }
    }
  },
  "scripts": {
    "vscode:prepublish": "npm run compile",
    "compile": "tsc -p ./",
    "watch": "tsc -watch -p ./"
  },
  "devDependencies": {
    "@types/vscode": "^1.93.0",
    "@types/node": "^18.x",
    "typescript": "^5.5.0"
  }
}